{
  "name": "tsedit",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "gulp && npm run build:css",
    "build:css": "postcss ./src/client/index.css -o dist/client/bundle.css",
    "start": "npm run build && reload -d ./dist/client",
    "clean": "rimraf dist",
    "lint:js": "tslint src",
    "start:prod": "cross-env IS_PROD=true pm2 start ./dist/index.js --name tsedit",
    "watch:css": "postcss ./src/client/index.css --config ./scripts/postcss.config.js -o ./dist/client/bundle.css -w",
    "watch": ""
  },
  "author": "Boris Cherny <boris@performancejs.com> (https://performancejs.com)",
  "license": "MIT",
  "devDependencies": {
    "@types/compression": "0.0.35",
    "@types/express": "^4.11.1",
    "@types/highlight.js": "^9.12.2",
    "@types/lodash": "^4.14.102",
    "@types/markdown-it": "0.0.4",
    "@types/node": "^9.4.4",
    "@types/react": "^16.0.36",
    "@types/react-dom": "^16.0.3",
    "browserify": "^16.1.1",
    "browserify-shim": "^3.8.14",
    "gulp": "^3.9.1",
    "gulp-postcss": "^7.0.1",
    "gulp-sourcemaps": "^2.6.4",
    "gulp-typescript": "^4.0.1",
    "gulplog": "^1.0.0",
    "node-static": "^0.7.10",
    "postcss": "^6.0.19",
    "postcss-cli": "^5.0.0",
    "postcss-cssnext": "^3.1.0",
    "postcss-import": "^11.1.0",
    "postcss-inline-svg": "^3.0.0",
    "postcss-svgo": "^2.1.6",
    "reload": "^2.2.2",
    "rework-import": "^2.1.0",
    "rework-npm": "^1.0.0",
    "rework-plugin-inline": "^1.0.1",
    "run-sequence": "^2.2.1",
    "tsify": "^3.0.4",
    "tslint": "^5.9.1",
    "typescript": "^2.7.2",
    "vinyl-buffer": "^1.0.1",
    "vinyl-source-stream": "^2.0.0",
    "watch": "^1.0.2",
    "watchify": "^3.10.0"
  },
  "dependencies": {
    "compression": "^1.7.1",
    "express": "^4.16.2",
    "highlight.js": "^9.12.0",
    "lodash": "^4.17.5",
    "markdown-it": "^8.4.0",
    "monaco-editor": "^0.10.1",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "source-map-support": "^0.5.3",
    "vinyl-transform": "^1.0.0"
  },
  "browserify": {
    "transform": [
      "browserify-shim"
    ]
  },
  "browserify-shim": {
    "lodash": "global:_",
    "react": "global:React",
    "react-dom": "global:ReactDOM"
  }
}
