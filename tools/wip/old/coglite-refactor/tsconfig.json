{
  "compilerOptions": {
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2016",
    "baseUrl": "src",
    "noEmitOnError": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "preserveConstEnums": true,
    "importHelpers": true,
    "outDir": "dist"
  },
  "compileOnSave": false,
  "include": [
    "src"
  ]
}