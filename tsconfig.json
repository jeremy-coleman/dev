{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "jsx": "react",
    "sourceMap": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "noEmitOnError": false,
    "noImplicitReturns": false,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": false,
    "outDir": "dist",
    "removeComments": true,
    "allowJs": true,
    "pretty": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": false
  },
  "files": ["globals.d.ts"],
  "include":["src"],
  "exclude": ["node_modules"]
}