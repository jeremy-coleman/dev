{
    "compilerOptions": {
      "target": "es2015",
      "module": "commonjs",
      "moduleResolution": "node",
      "jsx": "react",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "allowSyntheticDefaultImports": false,
      "noUnusedLocals": true,
      "strictNullChecks": false,
      "noImplicitReturns": true,
      "outDir": "dist"
    },
    "include": ["src"],
    "exclude": ["node_modules"]
  }
  