{
  "compilerOptions": {
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": false,
    "jsx": "react",
    "lib": ["dom","dom.iterable", "es6", "es7", "es2017", "esnext", "webworker"],
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": false,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "noImplicitThis": false,
    "noUnusedLocals": false,
    "pretty": true,
    "removeComments": true,
    "skipLibCheck": true,
    "baseUrl": "./src"
  },
  "include": ["src", "tools/definitions/*"],
  "exclude": ["node_modules"]
}
