{
	"compilerOptions": {
		"target": "esnext",
		"module": "commonjs",
		"moduleResolution": "node",
		"sourceMap": true,
		"jsx": "react",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"lib": ["es2015","es2016", "esnext","dom"],
		"noImplicitAny": false,
		"suppressImplicitAnyIndexErrors": true,
		"removeComments": false,
		"outDir": "dist"
	},
	"include": ["src"],
	"exclude":["node_modules"]
}